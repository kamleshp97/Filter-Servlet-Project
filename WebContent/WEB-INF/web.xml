<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Filter-Servlet-Project</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <!-- SERVLETS -->
  <servlet>
  	<servlet-name>register</servlet-name>
  	<servlet-class>com.project.servlets.Register</servlet-class>
  </servlet>
  <servlet-mapping>
	  <servlet-name>register</servlet-name>
	  <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.project.servlets.Login</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>homepage</servlet-name>
  	<servlet-class>com.project.servlets.Homepage</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>homepage</servlet-name>
  	<url-pattern>/homepage</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>saveRegisterData</servlet-name>
  	<servlet-class>com.project.servlets.SaveRegisterData</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>saveRegisterData</servlet-name>
  	<url-pattern>/saveRegisterData</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>mainPage</servlet-name>
  	<servlet-class>com.project.servlets.MainPage</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>mainPage</servlet-name>
  	<url-pattern>/mainPage</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>loginCheck</servlet-name>
  	<servlet-class>com.project.servlets.LoginCheck</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>loginCheck</servlet-name>
  	<url-pattern>/loginCheck</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>about</servlet-name>
  	<servlet-class>com.project.servlets.About</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>about</servlet-name>
  	<url-pattern>/about</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>newProduct</servlet-name>
  	<servlet-class>com.project.servlets.NewProductForm</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>newProduct</servlet-name>
  	<url-pattern>/newProduct</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>addNewProduct</servlet-name>
  	<servlet-class>com.project.servlets.AddNewProduct</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>addNewProduct</servlet-name>
  	<url-pattern>/addNewProduct</url-pattern>
  </servlet-mapping>
  
  <!-- FILTERS -->
	<filter>
		<filter-name>emailVerify</filter-name>
		<filter-class>com.project.filters.EmailVerifyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>emailVerify</filter-name>
		<url-pattern>/saveRegisterData</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>passwordVerify</filter-name>
		<filter-class>com.project.filters.PasswordVerifyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>passwordVerify</filter-name>
		<url-pattern>/saveRegisterData</url-pattern>
	</filter-mapping>
	
  
</web-app>